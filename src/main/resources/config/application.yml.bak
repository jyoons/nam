# view 설정
#spring.mvc.view.prefix=/WEB-INF/views/
#spring.mvc.view.suffix=.html

# message properties
#spring.messages.basename=messages/messages

# MyBatis
mybatis:
  configuration:
    default-statement-timeout: 10
    cache-enabled: false
    map-underscore-to-camel-case: true

  mapper-locations: classpath*:/kr/co/ref/**/mapper/*.xml
  type-aliases-package: kr.co.ref.**.vo

# ERROR 출력
server:
  error:
    whitelabel:
      enabled: false
    path: /error/404.peb

# @RespoonseBody Default ContentType 정의
spring:
  mvc:
    contentnegotiation:
      media-types:
        defaultContentType: application/json

  devtools:
    livereload:
      enabled: true

  freemarker:
    cache: false

  thymeleaf:
    cache: false

ref:
  default:
    pageSize: 10

pebble:
  prefix: /templates/
  suffix: .peb
  cache: false
  contentType: text/html
  encoding: UTF-8





